{
  "name": "Shure SLX-D",
  "type": "TCP Client",
  "path": "Hardware",

  "version": "0.0.1",
  "description": "Monitor and Control Shure SLX-D wireless microphone receivers",
  "url": "https://github.com/niklasberlin/Shure-SLXD-Chataigne-module",
  "downloadURL": "https://github.com/niklasberlin/Shure-SLXD-Chataigne-module/archive/refs/heads/main.zip",

  "hasInput": true,
  "hasOutput": true,

  "hideDefaultCommands": true,

  "defaults": {
    "autoAdd": false,
    "protocol": "Direct",
    "output": {
      "local": false,
      "remotePort": 2202
    }
  },

  "parameters": {
    "Update Rate Ch 1": {
      "type": "Enum",
      "description": "Select the Update Rate for constantly changing infos (RF Signal Level, Audio Signal Level)",
      "options": {
        "no Updates": "00000",
        "very slow (15sec)": "15000",
        "slow (5sec)": "05000",
        "medium (2,5sec)": "02500",
        "fast (1sec)": "01000",
        "very fast (0.1sec)": "00100"
      }
    },
    "Update Rate Ch 2": {
      "type": "Enum",
      "description": "Select the Update Rate for constantly changing infos (RF Signal Level, Audio Signal Level)",
      "options": {
        "no Updates": "00000",
        "very slow (15sec)": "15000",
        "slow (5sec)": "05000",
        "medium (2,5sec)": "02500",
        "fast (1sec)": "01000",
        "very fast (0.1sec)": "00100"
      }
    }
  },

  "hideDefaultParameters": [
    "autoAdd",
    "protocol",
    "messageStructure",
    "customSeparator",
    "firstValueIsTheName",
    "output/local",
    "output/remotePort",
    "pass_through",
    "receiveFrequency"
  ],

  "scripts": ["moduleScript.js"],

  "values": {
    "Device": {
      "type": "Container",
      "collapsed": false,
      "flashing": {
        "type": "Boolean",
        "default": false
      },
      "Modell Name": {
        "type": "String",
        "readOnly": true
      },
      "Device ID": {
        "type": "String"
      },
      "RF Band": {
        "type": "String",
        "readOnly": true
      },
      "Lock Status": {
        "type": "Enum",
        "options": {
          "OFF": "OFF",
          "MENU": "MENU",
          "ALL": "ALL"
        },
        "readOnly": true
      },
      "FW Version": {
        "type": "String",
        "readOnly": true
      }
    },
    "Channel 1": {
      "type": "Container",
      "collapsed": false,
      "flashing": {
        "type": "Boolean",
        "default": false
      },
      "Name": {
        "type": "String"
      },
      "Audio Gain": {
        "type": "Integer",
        "min": -18,
        "max": 42
      },
      "Audio Level Switch": {
        "type": "Enum",
        "options": {
          "MIC": "MIC",
          "LINE": "LINE"
        },
        "readOnly": true
      },
      "Frequency": {
        "type": "String",
        "readOnly": true
      },
      "RF Group": {
        "type": "Integer"
      },
      "RF Channel": {
        "type": "Integer"
      },
      "Audio Level Peak": {
        "type": "Integer",
        "min": -120,
        "max": 0,
        "readOnly": true
      },
      "Audio Level RMS": {
        "type": "Integer",
        "min": -120,
        "max": 0,
        "readOnly": true
      },
      "RSSI Ant A": {
        "type": "Integer",
        "min": -120,
        "max": 0,
        "readOnly": true
      },
      "RSSI Ant B": {
        "type": "Integer",
        "min": -120,
        "max": 0,
        "readOnly": true
      },
      "Transmitter Type": {
        "type": "String",
        "readOnly": true
      },
      "Battery Runtime": {
        "type": "String",
        "readOnly": true
      },
      "Battery Bars": {
        "type": "Enum",
        "options": {
          "unknown": "255",
          "5/5": "005",
          "4/5": "004",
          "3/5": "003",
          "2/5": "002",
          "1/5": "001",
          "0/5": "000"
        },
        "readOnly": true
      }
    },
    "Channel 2": {
      "type": "Container",
      "collapsed": false,
      "flashing": {
        "type": "Boolean",
        "default": false
      },
      "Name": {
        "type": "String"
      },
      "Audio Gain": {
        "type": "Integer",
        "min": -18,
        "max": 42
      },
      "Audio Level Switch": {
        "type": "Enum",
        "options": {
          "MIC": "MIC",
          "LINE": "LINE"
        },
        "readOnly": true
      },
      "Frequency": {
        "type": "String",
        "readOnly": true
      },
      "RF Group": {
        "type": "Integer"
      },
      "RF Channel": {
        "type": "Integer"
      },
      "Audio Level Peak": {
        "type": "Integer",
        "min": -120,
        "max": 0,
        "readOnly": true
      },
      "Audio Level RMS": {
        "type": "Integer",
        "min": -120,
        "max": 0,
        "readOnly": true
      },
      "RSSI Ant A": {
        "type": "Integer",
        "min": -120,
        "max": 0,
        "readOnly": true
      },
      "RSSI Ant B": {
        "type": "Integer",
        "min": -120,
        "max": 0,
        "readOnly": true
      },
      "Transmitter Type": {
        "type": "String",
        "readOnly": true
      },
      "Battery Runtime": {
        "type": "String",
        "readOnly": true
      },
      "Battery Bars": {
        "type": "Enum",
        "options": {
          "unknown": "255",
          "5/5": "005",
          "4/5": "004",
          "3/5": "003",
          "2/5": "002",
          "1/5": "001",
          "0/5": "000"
        },
        "readOnly": true
      }
    }
  },

  "commands": {
    "Custom command": {
      "menu": "",
      "callback": "customCmd",
      "parameters": {
        "Value": {
          "type": "Integer",
          "min": 0,
          "max": 100,
          "default": 0
        }
      }
    }
  }
}
