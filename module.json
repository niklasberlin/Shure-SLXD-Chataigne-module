{
  "name": "Shure SLX-D",
  "type": "TCP Client",
  "path": "Hardware",

  "version": "0.0.1",
  "description": "Monitor and Control Shure SLX-D wireless microphone receivers",
  "url": "https://github.com/niklasberlin/Shure-SLXD-Chataigne-module",
  "downloadURL": "https://github.com/niklasberlin/Shure-SLXD-Chataigne-module/archive/refs/heads/main.zip",

  "hasInput": true,
  "hasOutput": true,

  "hideDefaultCommands": true,

  "defaults": {
    "autoAdd": false,
    "protocol": "Direct",
    "output": {
      "local": false,
      "remotePort": 2202
    }
  },

  "parameters": {},

  "hideDefaultParameters": [
    "autoAdd",
    "protocol",
    "messageStructure",
    "customSeparator",
    "firstValueIsTheName",
    "output/local",
    "output/remotePort"
  ],

  "scripts": ["moduleScript.js"],

  "values": {},

  "commands": {
    "Custom command": {
      "menu": "",
      "callback": "customCmd",
      "parameters": {
        "Value": {
          "type": "Integer",
          "min": 0,
          "max": 100,
          "default": 0
        }
      }
    }
  }
}
